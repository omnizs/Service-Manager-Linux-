{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "outDir": "dist/renderer",
    "rootDir": "src/renderer",
    "types": ["vite/client", "react", "react-dom"],
    "declaration": false,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/renderer/**/*.tsx",
    "src/types/**/*.d.ts"
  ]
}


