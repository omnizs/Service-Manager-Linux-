{
  "name": "@omnizs/service-manager",
  "version": "2.8.5-alpha.1",
  "description": "Cross-platform graphical utility for managing system services on Linux, Windows, and macOS.",
  "main": "dist/main/main.js",
  "bin": {
    "service-manager": "bin/service-manager.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dev": "npm run build:main && vite",
    "start": "npm run build && electron .",
    "generate-icons": "node build/generate-icons.js",
    "dist": "npm run build && npm run generate-icons && electron-builder",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "service-manager",
    "systemd",
    "systemctl",
    "launchctl",
    "windows-services",
    "electron",
    "services",
    "daemon",
    "system-administration",
    "cross-platform"
  ],
  "author": {
    "name": "omnizs",
    "email": "omnizs@users.noreply.github.com"
  },
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omnizs/Service-Manager.git"
  },
  "bugs": {
    "url": "https://github.com/omnizs/Service-Manager/issues"
  },
  "homepage": "https://github.com/omnizs/Service-Manager#readme",
  "engines": {
    "node": ">=20.19.0"
  },
  "files": [
    "dist/",
    "bin/",
    "resources/",
    "LICENSE",
    "README.md"
  ],
  "build": {
    "appId": "com.omnizs.servicemanager",
    "productName": "Service Manager",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "omnizs",
        "repo": "Service-Manager",
        "releaseType": "release"
      }
    ],
    "extraResources": [
      {
        "from": "resources/icon.png",
        "to": "icon.png"
      }
    ],
    "files": [
      "dist/**/*",
      "package.json",
      "bin/**/*",
      "resources/**/*"
    ],
    "mac": {
      "icon": "resources/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "System",
      "icon": "resources/icon.png",
      "executableName": "service-manager",
      "artifactName": "service-manager-${version}.${ext}",
      "packageCategory": "admin",
      "maintainer": "omnizs <omnizs@users.noreply.github.com>",
      "vendor": "omnizs",
      "synopsis": "Cross-platform service manager",
      "description": "Cross-platform graphical utility for managing system services"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "sign": null,
      "signingHashAlgorithms": ["sha256"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "Service Manager",
      "include": "build/installer.nsh"
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.2.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/vite": "^4.1.16",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.20",
    "copyfiles": "^2.4.1",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^3.0.0",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.7.2",
    "vite": "^7.2.1"
  }
}
