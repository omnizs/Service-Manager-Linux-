{
  "name": "@omnizs/service-manager",
  "version": "2.0.0",
  "description": "Cross-platform graphical utility for managing system services on Linux, Windows, and macOS.",
  "main": "dist/main/main.js",
  "bin": {
    "service-manager": "bin/service-manager.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:main && npm run build:renderer && npm run copy:assets",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "copy:assets": "copyfiles -u 1 \"src/renderer/**/*.html\" \"src/renderer/**/*.css\" dist",
    "start": "npm run build && electron .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "service-manager",
    "systemd",
    "systemctl",
    "launchctl",
    "windows-services",
    "electron",
    "services",
    "daemon",
    "system-administration",
    "cross-platform"
  ],
  "author": "omnizs",
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omnizs/Service-Manager.git"
  },
  "bugs": {
    "url": "https://github.com/omnizs/Service-Manager/issues"
  },
  "homepage": "https://github.com/omnizs/Service-Manager#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "bin/",
    "resources/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^22.10.2",
    "copyfiles": "^2.4.1",
    "electron": "^35.7.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2"
  }
}
