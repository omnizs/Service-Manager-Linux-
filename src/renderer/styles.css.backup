/* ========================================
   CSS Variables & Reset
   ======================================== */
:root {
  color-scheme: dark;
  
  /* Minimalist Colors - Monochrome + One Accent */
  --color-bg-primary: #0a0a0a;
  --color-bg-secondary: #000000;
  --color-bg-tertiary: #1a1a1a;
  
  --color-border: rgba(255, 255, 255, 0.08);
  
  --color-text-primary: #ffffff;
  --color-text-secondary: #999999;
  --color-text-tertiary: #666666;
  
  --color-accent: #4a90e2;
  
  --color-success: #22c55e;
  --color-error: #ef4444;
  --color-warning: #f59e0b;
  
  /* Spacing - Generous for Minimalism */
  --spacing-xs: 8px;
  --spacing-sm: 12px;
  --spacing-md: 20px;
  --spacing-lg: 32px;
  --spacing-xl: 48px;
  
  /* Border Radius - Minimal */
  --radius: 2px;
  
  /* Typography */
  --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
  --font-mono: 'SF Mono', 'Monaco', 'Courier New', monospace;
  --font-size-base: 14px;
  --line-height: 1.8;
}

*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  font-size: var(--font-size-base);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: var(--font-family);
  background: var(--color-bg-secondary);
  color: var(--color-text-primary);
  line-height: var(--line-height);
  overflow: hidden;
  font-weight: 400;
}

/* ========================================
   App Container
   ======================================== */
.app-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
}

/* ========================================
   Header
   ======================================== */
.app-header {
  background: var(--color-bg-primary);
  border-bottom: 1px solid var(--color-border);
  padding: var(--spacing-lg) var(--spacing-xl);
  flex-shrink: 0;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 100%;
}

.header-left {
  flex: 1;
}

.app-title {
  font-size: 16px;
  font-weight: 500;
  margin: 0;
  color: var(--color-text-primary);
  letter-spacing: 0;
}

.app-subtitle {
  display: none;
}

.header-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.status-dot {
  display: none;
}

.status-text {
  font-size: 14px;
  color: var(--color-text-tertiary);
  font-weight: 400;
}

/* Essential animations only */
@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.btn-refresh {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm) var(--spacing-md);
  background: transparent;
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  color: var(--color-text-primary);
  font-size: 14px;
  font-weight: 400;
  cursor: pointer;
  transition: opacity 0.2s ease;
}

.btn-refresh:hover {
  opacity: 0.7;
}

.btn-refresh:active {
  opacity: 0.5;
}

.btn-refresh svg {
  width: 14px;
  height: 14px;
}

/* ========================================
   Main Layout
   ======================================== */
.app-main {
  flex: 1;
  overflow: hidden;
  padding: var(--spacing-xl);
}

.main-layout {
  display: grid;
  grid-template-columns: 1fr 360px;
  gap: var(--spacing-xl);
  height: 100%;
  overflow: hidden;
}

/* ========================================
   Services Panel
   ======================================== */
.services-panel {
  display: flex;
  flex-direction: column;
  background: var(--color-bg-primary);
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  overflow: hidden;
}

.panel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--spacing-md);
  padding: var(--spacing-md) var(--spacing-lg);
  background: var(--color-bg-primary);
  border-bottom: 1px solid var(--color-border);
}

.search-box {
  position: relative;
  flex: 1;
  max-width: 400px;
}

.search-icon {
  position: absolute;
  left: var(--spacing-sm);
  top: 50%;
  transform: translateY(-50%);
  color: var(--color-text-tertiary);
  pointer-events: none;
  width: 14px;
  height: 14px;
}

.search-input {
  width: 100%;
  padding: var(--spacing-sm) var(--spacing-sm) var(--spacing-sm) 32px;
  background: transparent;
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  color: var(--color-text-primary);
  font-size: 14px;
  font-family: var(--font-family);
  transition: border-color 0.2s ease;
}

.search-input:focus {
  outline: none;
  border-color: var(--color-text-tertiary);
}

.search-input::placeholder {
  color: var(--color-text-tertiary);
}

.filter-group {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.filter-label {
  font-size: 14px;
  color: var(--color-text-tertiary);
  font-weight: 400;
}

.filter-select {
  padding: var(--spacing-sm);
  background: transparent;
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  color: var(--color-text-primary);
  font-size: 14px;
  font-family: var(--font-family);
  cursor: pointer;
  transition: border-color 0.2s ease;
}

.filter-select:focus {
  outline: none;
  border-color: var(--color-text-tertiary);
}

/* ========================================
   Table
   ======================================== */
.table-container {
  flex: 1;
  overflow: auto;
  scrollbar-width: thin;
  scrollbar-color: var(--color-border) transparent;
}

.table-container::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

.table-container::-webkit-scrollbar-track {
  background: transparent;
}

.table-container::-webkit-scrollbar-thumb {
  background: var(--color-border);
  border-radius: 0;
}

.table-container::-webkit-scrollbar-thumb:hover {
  background: var(--color-text-tertiary);
}

.services-table {
  width: 100%;
  border-collapse: collapse;
  table-layout: fixed;
  min-width: 900px;
}

.table-head th {
  position: sticky;
  top: 0;
  padding: var(--spacing-md);
  background: var(--color-bg-primary);
  border-bottom: 1px solid var(--color-border);
  text-align: left;
  font-size: 12px;
  font-weight: 400;
  color: var(--color-text-tertiary);
  text-transform: none;
  letter-spacing: 0;
  z-index: 10;
}

.services-table th:nth-child(1) { width: 18%; }
.services-table th:nth-child(2) { width: 10%; }
.services-table th:nth-child(3) { width: 10%; }
.services-table th:nth-child(4) { width: 22%; }
.services-table th:nth-child(5) { width: 22%; }
.services-table th:nth-child(6) { width: 18%; }

.table-body td {
  padding: var(--spacing-md);
  border-bottom: 1px solid var(--color-border);
  font-size: 14px;
  color: var(--color-text-secondary);
  vertical-align: middle;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.table-body tr {
  transition: opacity 0.2s ease;
  cursor: pointer;
}

.table-body tr:active {
  opacity: 0.5;
}

/* Virtual scrolling spacer */
.virtual-spacer {
  pointer-events: none;
  background: transparent;
}

.table-body tr:hover {
  opacity: 0.7;
}

.table-body tr.selected {
  background: transparent;
  border-left: 2px solid var(--color-text-primary);
}

.table-body tr.selected td {
  color: var(--color-text-primary);
}

.empty-row td {
  text-align: center;
  padding: var(--spacing-xl) !important;
  color: var(--color-text-tertiary);
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-xl) 0;
}

.spinner {
  width: 20px;
  height: 20px;
  border: 2px solid var(--color-border);
  border-top-color: var(--color-text-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

/* Table Cell Styles */
.cell-name {
  font-weight: 400;
  color: var(--color-text-primary);
}

.cell-executable,
.cell-description {
  color: var(--color-text-tertiary);
}

.cell-executable .monospace,
dd.monospace {
  font-family: var(--font-mono);
  font-size: 13px;
  color: var(--color-text-tertiary);
}

/* Status Badges - Enhanced in v2.1.0 */
.status-badge {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-size: 14px;
  font-weight: 400;
  text-transform: none;
  padding: 4px 10px;
  border-radius: var(--radius);
  transition: all 0.2s ease;
}

.status-badge::before {
  content: '';
  width: 6px;
  height: 6px;
  border-radius: 50%;
  display: inline-block;
}

.status-active {
  color: var(--color-success);
  background: rgba(34, 197, 94, 0.1);
}

.status-active::before {
  background: var(--color-success);
  box-shadow: 0 0 8px rgba(34, 197, 94, 0.5);
  animation: pulse-green 2s ease-in-out infinite;
}

.status-inactive {
  color: var(--color-error);
  background: rgba(239, 68, 68, 0.1);
}

.status-inactive::before {
  background: var(--color-error);
}

.status-failed {
  color: var(--color-error);
  background: rgba(239, 68, 68, 0.15);
  font-weight: 500;
}

.status-failed::before {
  background: var(--color-error);
  animation: pulse-red 1.5s ease-in-out infinite;
}

.status-activating,
.status-deactivating {
  color: var(--color-warning);
  background: rgba(245, 158, 11, 0.1);
}

.status-activating::before,
.status-deactivating::before {
  background: var(--color-warning);
  animation: spin 1s linear infinite;
}

@keyframes pulse-green {
  0%, 100% {
    opacity: 1;
    box-shadow: 0 0 8px rgba(34, 197, 94, 0.5);
  }
  50% {
    opacity: 0.6;
    box-shadow: 0 0 4px rgba(34, 197, 94, 0.3);
  }
}

@keyframes pulse-red {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* Action Buttons - Enhanced in v2.1.0 */
.cell-actions {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  align-items: center;
}

.action-button {
  padding: 8px 16px;
  background: var(--color-bg-secondary);
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  color: var(--color-text-primary);
  font-size: 13px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  letter-spacing: 0.02em;
  position: relative;
  overflow: hidden;
}

.action-button::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  transform: translate(-50%, -50%);
  transition: width 0.3s ease, height 0.3s ease;
}

.action-button:hover:not(:disabled) {
  transform: translateY(-1px);
  border-color: var(--color-text-tertiary);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

.action-button:hover:not(:disabled)::before {
  width: 100px;
  height: 100px;
}

.action-button:active:not(:disabled) {
  transform: translateY(0);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
}

.action-button:disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

.action-start {
  background: rgba(34, 197, 94, 0.1);
  border-color: var(--color-success);
  color: var(--color-success);
}

.action-start:hover:not(:disabled) {
  background: rgba(34, 197, 94, 0.2);
}

.action-stop {
  background: rgba(239, 68, 68, 0.1);
  border-color: var(--color-error);
  color: var(--color-error);
}

.action-stop:hover:not(:disabled) {
  background: rgba(239, 68, 68, 0.2);
}

.action-restart {
  background: rgba(74, 144, 226, 0.1);
  border-color: var(--color-accent);
  color: var(--color-accent);
}

.action-restart:hover:not(:disabled) {
  background: rgba(74, 144, 226, 0.2);
}

.action-enable {
  border-color: var(--color-success);
  color: var(--color-success);
}

.action-enable:hover:not(:disabled) {
  background: rgba(34, 197, 94, 0.1);
}

.action-disable {
  border-color: var(--color-warning);
  color: var(--color-warning);
}

.action-disable:hover:not(:disabled) {
  background: rgba(245, 158, 11, 0.1);
}

/* Pagination */
.pagination-row {
  background: transparent;
  border-top: 1px solid var(--color-border);
}

.pagination-row:hover {
  background: transparent;
}

.pagination-cell {
  padding: var(--spacing-md) !important;
}

.pagination-info {
  text-align: center;
  color: var(--color-text-tertiary);
  font-size: 13px;
  margin-bottom: var(--spacing-sm);
}

.pagination-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-md);
}

.pagination-button {
  padding: var(--spacing-sm) var(--spacing-md);
  background: transparent;
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  color: var(--color-text-secondary);
  font-size: 13px;
  font-weight: 400;
  cursor: pointer;
  transition: opacity 0.2s ease;
}

.pagination-button:hover:not(:disabled) {
  opacity: 0.7;
}

.pagination-button:disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

.page-info {
  color: var(--color-text-secondary);
  font-weight: 400;
  font-size: 13px;
  min-width: 100px;
  text-align: center;
}

/* ========================================
   Details Panel
   ======================================== */
.details-panel {
  display: flex;
  flex-direction: column;
  background: var(--color-bg-primary);
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  overflow: hidden;
}

.details-header {
  padding: var(--spacing-md) var(--spacing-lg);
  background: var(--color-bg-primary);
  border-bottom: 1px solid var(--color-border);
}

.details-title {
  font-size: 14px;
  font-weight: 400;
  color: var(--color-text-primary);
  margin: 0;
}

.details-content {
  flex: 1;
  overflow: auto;
  padding: var(--spacing-lg);
  scrollbar-width: thin;
  scrollbar-color: var(--color-border) transparent;
}

.details-content::-webkit-scrollbar {
  width: 6px;
}

.details-content::-webkit-scrollbar-track {
  background: transparent;
}

.details-content::-webkit-scrollbar-thumb {
  background: var(--color-border);
  border-radius: 0;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-lg);
  padding: var(--spacing-xl) 0;
  color: var(--color-text-tertiary);
  text-align: center;
  height: 100%;
}

.empty-state svg {
  opacity: 0.2;
}

.empty-state p {
  font-size: 14px;
  margin: 0;
}

.details-content dl {
  display: grid;
  grid-template-columns: max-content 1fr;
  gap: var(--spacing-lg) var(--spacing-md);
  margin: 0;
}

.details-content dt {
  font-weight: 400;
  color: var(--color-text-tertiary);
  font-size: 13px;
}

.details-content dd {
  margin: 0;
  color: var(--color-text-secondary);
  font-size: 14px;
  word-break: break-word;
}

.detail-row {
  grid-column: 1 / span 2;
  display: grid;
  grid-template-columns: max-content 1fr;
  gap: var(--spacing-md);
  align-items: center;
}

.detail-value-with-action {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.inline-button {
  padding: 6px 12px;
  background: transparent;
  border: 1px solid var(--color-border);
  border-radius: var(--radius);
  color: var(--color-text-secondary);
  font-size: 13px;
  font-weight: 400;
  cursor: pointer;
  transition: opacity 0.2s ease;
}

.inline-button:hover {
  opacity: 0.7;
}

/* ========================================
   Footer
   ======================================== */
.app-footer {
  background: var(--color-bg-primary);
  border-top: 1px solid var(--color-border);
  padding: var(--spacing-md) var(--spacing-xl);
  flex-shrink: 0;
}

.footer-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.footer-left,
.footer-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.footer-item,
.footer-performance {
  font-size: 12px;
  color: var(--color-text-tertiary);
}

.footer-performance {
  font-family: var(--font-mono);
  color: var(--color-text-tertiary);
  font-weight: 400;
}

.footer-separator {
  color: var(--color-text-tertiary);
  opacity: 0.3;
  user-select: none;
}

/* ========================================
   Toast Notifications - Enhanced in v2.1.0
   ======================================== */
.toast-container {
  position: fixed;
  bottom: var(--spacing-lg);
  right: var(--spacing-lg);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  pointer-events: none;
  z-index: 1000;
}

.toast {
  padding: var(--spacing-md) var(--spacing-lg);
  background: var(--color-bg-primary);
  border: 1px solid var(--color-border);
  border-radius: 4px;
  color: var(--color-text-primary);
  font-size: 14px;
  opacity: 0;
  transform: translateX(100px) scale(0.9);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  pointer-events: auto;
  min-width: 320px;
  max-width: 420px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.toast::before {
  content: '';
  width: 4px;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 4px 0 0 4px;
}

.toast.visible {
  opacity: 1;
  transform: translateX(0) scale(1);
}

.toast-success {
  border-left: 3px solid var(--color-success);
  background: linear-gradient(90deg, rgba(34, 197, 94, 0.15) 0%, var(--color-bg-primary) 10%);
}

.toast-success::before {
  background: var(--color-success);
}

.toast-error {
  border-left: 3px solid var(--color-error);
  background: linear-gradient(90deg, rgba(239, 68, 68, 0.15) 0%, var(--color-bg-primary) 10%);
}

.toast-error::before {
  background: var(--color-error);
}

.toast-info {
  border-left: 3px solid var(--color-accent);
  background: linear-gradient(90deg, rgba(74, 144, 226, 0.15) 0%, var(--color-bg-primary) 10%);
}

.toast-info::before {
  background: var(--color-accent);
}

/* ========================================
   Focus Indicators (Accessibility)
   ======================================== */
*:focus-visible {
  outline: 1px solid var(--color-text-primary);
  outline-offset: 2px;
}

button:focus-visible,
input:focus-visible,
select:focus-visible {
  outline: 1px solid var(--color-text-primary);
  outline-offset: 2px;
}

/* ========================================
   Responsive Design
   ======================================== */
@media (max-width: 1280px) {
  .main-layout {
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }
  
  .details-panel {
    order: -1;
    max-height: 280px;
  }
}

@media (max-width: 768px) {
  .app-header {
    padding: var(--spacing-md) var(--spacing-lg);
  }
  
  .header-content {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--spacing-md);
  }
  
  .app-main {
    padding: var(--spacing-lg);
  }
  
  .panel-header {
    flex-direction: column;
    align-items: stretch;
  }
  
  .search-box {
    max-width: 100%;
  }
  
  .services-table {
    min-width: 600px;
  }
}
